{
  "compilerOptions": {
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,

    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,

    "declaration": true,
    "removeComments": true,
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib"
  },
  "include": [
    "./src/**/*"
  ]
}
